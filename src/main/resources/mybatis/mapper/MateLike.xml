<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
                        
<mapper namespace="com.kosta.jupjup.dao.MateLikeDAO">
	
	 <select id="likeCount" resultType="Integer">
		select count(lno) from mate_like where no=#{no}
	</select>
	
	<insert id="likeInsert">
		insert into mate_like (no) values (#{no})
	</insert>
	
	<select id="likeGetInfo" resultType="Integer">
		select lno from mate_like where no=#{no}
	</select>
	
	<update id="likeUpdate">
		update mate_like
		set <include refid="cal"></include>
		where no=#{no}
	</update>
	
	<sql id="cal">
		<if test="count == 1">
			lno = 0
		</if> 
		
		<if test="count == 0">
			lno = lno + 1 
		</if>
	</sql>
</mapper>		