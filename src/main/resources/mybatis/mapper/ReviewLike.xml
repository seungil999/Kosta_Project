<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
                        
<mapper namespace="com.kosta.jupjup.dao.ReviewLikeDAO">
	
	 <select id="likeCount" resultType="Integer">
		select count(lno) from review_like where no=#{no} and userid=#{userid} 
	</select>
	
	<insert id="likeInsert">
		insert into review_like (lno,no,userid) values (1,#{no},#{userid})
	</insert>
	
	<select id="likeGetInfo" resultType="Integer">
		select lno from review_like where no=#{no} and userid=#{userid} 
	</select>
	
	<update id="likeUpdate">
		update review_like
		set <include refid="cal"></include>
		where no=#{no} and userid=#{userid}
	</update>
	
	<update id="likeCntUpdate">
		update review
		set likecnt=<include refid="cntcal"></include>
		where no=#{no}
	</update>
	
	<sql id="cal">
		<if test="count == 1">
			lno = 0
		</if> 
		
		<if test="count == 0">
			lno = lno + 1 
		</if>
	</sql>
	
	<sql id="cntcal">
		<if test="count == 1">
			likecnt-1
		</if> 
		
		<if test="count == 0">
			likecnt+1 
		</if>
	</sql>
</mapper>		